{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "ApiSettings": {
    "BaseUrl": "https://localhost:7123/api",
    "FrontendUrl": "http://127.0.0.1:8788"
  },
  "RateLimiting": {
    "GeneralRateLimit": {
      "PermitLimit": 100,
      "WindowInSeconds": 60,
      "QueueLimit": 2
    },
    "Authentication": {
      "SignInSlidingWindow": {
        "PermitLimit": 12,
        "QueueLimit": 2,
        "WindowInMinutes": 60,
        "SegmentsPerWindow": 6
      },
      "SignUpSlidingWindow": {
        "PermitLimit": 10,
        "QueueLimit": 2,
        "WindowInMinutes": 60,
        "SegmentsPerWindow": 6
      },
      "ConfirmEmailSlidingWindow": {
        "PermitLimit": 6,
        "QueueLimit": 2,
        "WindowInMinutes": 60,
        "SegmentsPerWindow": 6
      },
      "SignoutOutSlidingWindow": {
        "PermitLimit": 10,
        "QueueLimit": 2,
        "WindowInMinutes": 60,
        "SegmentsPerWindow": 6
      },
      "ResendEmailConfirmationSlidingWindow": {
        "PermitLimit": 6,
        "QueueLimit": 2,
        "WindowInMinutes": 60,
        "SegmentsPerWindow": 6
      },
      "PasswordResetRequestSlidingWindow": {
        "PermitLimit": 6,
        "QueueLimit": 2,
        "WindowInMinutes": 60,
        "SegmentsPerWindow": 6
      }
    },
    "GetResourceSlidingWindow": {
      "PermitLimit": 120,
      "QueueLimit": 2,
      "WindowInMinutes": 60,
      "SegmentsPerWindow": 6
    },
    "CreateResourceSlidingWindow": {
      "PermitLimit": 12,
      "QueueLimit": 2,
      "WindowInMinutes": 60,
      "SegmentsPerWindow": 6
    },
    "UpdateResourceSlidingWindow": {
      "PermitLimit": 30,
      "QueueLimit": 2,
      "WindowInMinutes": 60,
      "SegmentsPerWindow": 6
    },
    "DeleteResourceSlidingWindow": {
      "PermitLimit": 14,
      "QueueLimit": 2,
      "WindowInMinutes": 60,
      "SegmentsPerWindow": 6
    },
    "TokenBucketLimiters": {
      "ResourceUpvote": {
        "TokenLimit": 30,
        "TokensPerPeriod": 5,
        "ReplenishmentPeriod": 60,
        "QueueLimit": 0
      }
    }
  },
  "AllowedHosts": "localhost;disengage.online"
}
